{
  "name": "minesweeper-game",
  "version": "1.0.0",
  "description": "A minesweeper game with Express backend and vanilla JS frontend",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "node backend/server.js",
    "start:postgres": "node backend/server-postgres.js",
    "dev:postgres": "node backend/server-postgres.js",
    "migrate-to-postgres": "node scripts/migrate-to-postgres.js",
    "add-score": "node scripts/add-score.js",
    "migrate-scores": "node scripts/migrate-scores.js",
    "sync-historical": "node scripts/sync-historical.js",
    "docker:dev": "docker-compose up -d",
    "docker:dev:logs": "docker-compose logs -f",
    "docker:dev:stop": "docker-compose down",
    "docker:db": "docker-compose -f docker-compose.db-only.yml up -d",
    "docker:db:logs": "docker-compose -f docker-compose.db-only.yml logs -f",
    "docker:db:stop": "docker-compose -f docker-compose.db-only.yml down",
    "docker:ha": "docker-compose -f docker-compose.postgres-ha.yml up -d",
    "docker:ha:logs": "docker-compose -f docker-compose.postgres-ha.yml logs -f",
    "docker:ha:stop": "docker-compose -f docker-compose.postgres-ha.yml down",
    "docker:ha:status": "curl -s http://localhost:8080/cluster | jq",
    "docker:host1": "docker-compose -f docker-compose.host1.yml up -d",
    "docker:host1:logs": "docker-compose -f docker-compose.host1.yml logs -f",
    "docker:host1:stop": "docker-compose -f docker-compose.host1.yml down",
    "docker:host2": "docker-compose -f docker-compose.host2.yml up -d",
    "docker:host2:logs": "docker-compose -f docker-compose.host2.yml logs -f",
    "docker:host2:stop": "docker-compose -f docker-compose.host2.yml down"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "sql.js": "^1.10.3"
  }
}
