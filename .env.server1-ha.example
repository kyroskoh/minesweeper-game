# App Server 1 Configuration (with HA PostgreSQL)
# Copy this to .env.server1

# Server Configuration
PORT=3030
NODE_ENV=production

# Daily Puzzle Seed Salt (KEEP SECRET!)
DAILY_SEED_SALT=your-secret-salt-here-change-this

# PostgreSQL HA Configuration
# Point to HAProxy (on coordinator server) for automatic failover
POSTGRES_HOST=10.0.1.12
POSTGRES_PORT=5000
POSTGRES_DB=minesweeper
POSTGRES_USER=minesweeper_user
POSTGRES_PASSWORD=change-to-secure-password

# Connection Pool
POSTGRES_MAX_CONNECTIONS=20
POSTGRES_IDLE_TIMEOUT=30000

# SSL Configuration
POSTGRES_SSL=false

# Server Identification
SERVER_NAME=server1
SERVER_REGION=us-east-1
