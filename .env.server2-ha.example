# App Server 2 Configuration (with HA PostgreSQL)
# Copy this to .env.server2

# Server Configuration
PORT=3030
NODE_ENV=production

# Daily Puzzle Seed Salt (MUST BE IDENTICAL TO SERVER 1!)
DAILY_SEED_SALT=your-secret-salt-here-change-this

# PostgreSQL HA Configuration
# Point to SAME HAProxy as Server 1 for automatic failover
POSTGRES_HOST=10.0.1.12
POSTGRES_PORT=5000
POSTGRES_DB=minesweeper
POSTGRES_USER=minesweeper_user
POSTGRES_PASSWORD=change-to-secure-password

# Connection Pool
POSTGRES_MAX_CONNECTIONS=20
POSTGRES_IDLE_TIMEOUT=30000

# SSL Configuration
POSTGRES_SSL=false

# Server Identification
SERVER_NAME=server2
SERVER_REGION=us-west-1
