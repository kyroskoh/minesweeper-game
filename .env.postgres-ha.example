# PostgreSQL High Availability Configuration
# Copy this to .env.postgres-ha

# PostgreSQL Cluster Settings
POSTGRES_DB=minesweeper
POSTGRES_USER=minesweeper_user
POSTGRES_PASSWORD=change-this-to-secure-password

# PostgreSQL Superuser (for Patroni management)
POSTGRES_SUPERUSER=postgres
POSTGRES_SUPERUSER_PASSWORD=change-this-superuser-password

# Replication User
REPLICATION_PASSWORD=change-this-replication-password

# Patroni Admin
PATRONI_ADMIN_PASSWORD=change-this-admin-password

# Cluster Name
CLUSTER_NAME=minesweeper-cluster
